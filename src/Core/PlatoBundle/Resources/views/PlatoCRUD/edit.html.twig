{% extends 'CULabsAdminBundle:Crud:view.html.twig' %}

{% block stylesheets %} 
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/coreplato/css/plato_admin.css') }}" type="text/css" media="screen" title="default" />
{% endblock %}

{% block title_page %}{{ 'Edit Plato'|trans }}{% endblock %}

{% block actions %}
    <ul class="actions">
        <li>
            <a href="{{ path('admin_plato') }}" class="btn btn-icon btn-info">     
              <i class="icon-list"></i>{{ 'List'|trans }} 
            </a>
        </li>
        {% if is_granted('ROLE_PLATO_NEW') %}
        <li>
            <a href="{{ path('admin_plato_new') }}" class="btn btn-icon btn-info">     
              <i class="icon-plus"></i>{{ 'New'|trans }} 
            </a>
        </li>
        {% endif %}
        {% if is_granted('ROLE_PLATO_SHOW') %}
        <li>
            <a href="{{ path('admin_plato_show', { 'id': entity.id }) }}" class="btn btn-icon btn-info">     
              <i class="icon-eye-open"></i>{{ 'Show'|trans }} 
            </a>
        </li>
        {% endif %}
        {% if is_granted('ROLE_PLATO_DELETE') %}
        <li>
            <a href="#" onclick="confirmarUrl('{{ 'Realmente desea borrar'|trans }}', '{{ path('admin_plato_delete', { 'id': entity.id }) }}')" class="btn btn-icon btn-info">     
              <i class="icon-remove"></i>{{ 'Delete'|trans }} 
            </a>
        </li>
        {% endif %}
    </ul>
{% endblock %}
    
{% block view_body %}
    {% include 'CorePlatoBundle:PlatoCRUD:form.html.twig' with { 
        'form': form,
    } %}
{% endblock %}