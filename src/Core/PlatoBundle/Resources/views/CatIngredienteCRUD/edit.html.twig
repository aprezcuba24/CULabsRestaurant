{% extends 'CULabsAdminBundle:Crud:view.html.twig' %}

{% block title_page %}{{ 'Edit CatIngrediente'|trans }}{% endblock %}

{% block actions %}
    <ul class="actions">
        <li>
            <a href="{{ path('admin_ingrediente_categoria') }}" class="btn btn-icon btn-info">     
              <i class="icon-list"></i>{{ 'List'|trans }} 
            </a>
        </li>
        {% if is_granted('ROLE_CATINGREDIENTE_NEW') %}
        <li>
            <a href="{{ path('admin_ingrediente_categoria_new') }}" class="btn btn-icon btn-info">     
              <i class="icon-plus"></i>{{ 'New'|trans }} 
            </a>
        </li>
        {% endif %}
        {% if is_granted('ROLE_CATINGREDIENTE_SHOW') %}
        <li>
            <a href="{{ path('admin_ingrediente_categoria_show', { 'id': entity.id }) }}" class="btn btn-icon btn-info">     
              <i class="icon-eye-open"></i>{{ 'Show'|trans }} 
            </a>
        </li>
        {% endif %}
        {% if is_granted('ROLE_CATINGREDIENTE_DELETE') %}
        <li>
            <a href="#" onclick="confirmarUrl('{{ 'Realmente desea borrar'|trans }}', '{{ path('admin_ingrediente_categoria_delete', { 'id': entity.id }) }}')" class="btn btn-icon btn-info">     
              <i class="icon-remove"></i>{{ 'Delete'|trans }} 
            </a>
        </li>
        {% endif %}
    </ul>
{% endblock %}
    
{% block view_body %}
    {% include 'CorePlatoBundle:CatIngredienteCRUD:form.html.twig' with { 
        'form': form,
    } %}
{% endblock %}