<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="es" lang="es">
    <head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>CULabs Restaurant</title>
        {% block stylesheets %}    
	<link rel="stylesheet" href="{{ asset('/js/jquery/themes/base/jquery.ui.all.css') }}" type="text/css" media="screen" title="default" />
	<link rel="stylesheet" href="{{ asset('bundles/coreplan/css/main.css') }}" type="text/css" media="screen" title="default" />
	<link rel="stylesheet/less" href="{{ asset('bootstrap/less/bootstrap.less') }}" type="text/css" media="screen" title="default" />
        <script type="text/javascript" src="{{ asset('/bundles/culabsadmin/js/less.min.js') }}"></script>
        <style>
        body {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
        </style>
        <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        {% endblock %}
        {% block javascript_src %}
        <script type="text/javascript" src="{{ asset('/js/jquery/jquery-1.7.1.js') }}"></script>
        <script type="text/javascript" src="{{ asset('/js/jquery/jquery-ui-1.8.12.custom.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('/bootstrap/js/bootstrap-carousel.js') }}"></script>
        <script type="text/javascript" src="{{ asset('/bundles/culabsadmin/js/admin.js') }}"></script>
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        <link rel="alternate" type="application/rss+xml" title="{{ 'Ofertas platos para hoy'|trans }}" href="{{ url('rss_plato') }}" />
    </head>
    <body id="{% block body_custom_id %}{% endblock %}">
        <header class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <h2 class="pull-left"><a class="link_banner" href="{{ path('homepage') }}">CULabs Restaurant</a></h2>
                    <form style="margin-top: 12px" class="form-search pull-right" method="get" action="{{ path('buscador') }}">
                        <div class="input-append">
                            <input type="text" name="q" class="search-query">
                            <button type="submit" class="buscador btn"><i class="icon-search"></i> {{ 'Buscar'|trans }}</button>
                        </div>
                    </form>
                    {% render 'CorePlanBundle:Default:menuSuperior' %}
                </div>
            </div>
        </header>
        <div class="container" id="content">
            <div style="clear: both"></div>
            <article>
                {% block content %}{% endblock %}
            </article>
        </div>
        <footer id="footer" class="container-fluid">
            <div class="container">
                <aside>
                    <div class="destacados_container">
                        {% render 'CorePlatoBundle:Default:destacados' %}
                    </div>
                    <div class="calendar">
                        {% render 'CorePlanBundle:Default:calendar' %}
                    </div>
                </aside>
                <div style="clear: both"></div>
                <ul class="vinculos">
                    <li>
                        <a href="{{ path('rss_plato') }}" target="black">
                            <img class="rss" src="{{ asset('Feed-icon.svg.png') }}"/>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('sitio_page', {'page':'politica'}) }}">{{ 'Política de la aplicación'|trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('sitio_page', {'page':'jurado'}) }}">{{ 'Para el jurado'|trans }}</a>
                    </li>
                    <li class="last">
                        &reg; Alejandro Pérez Cuba (aprezcuba24@gmail.com)
                    </li>
                </ul>
            </div>
        </footer>
    </body>
</html>